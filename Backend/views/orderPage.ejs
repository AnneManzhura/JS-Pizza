<% include common/header.ejs %>

<div class="container-fluid">

    <div class="row order_panel">

        <div class="contact_form">

            <div class="form_description">
                1. Контактні дані
            </div>

            <div class="row">
                <div class="col-md-7">
                    <form class="form-horizontal">


                        <div class="form-group name-group">
                            <label class="col-sm-2 name_label control-label" style="text-align: center">Ім’я</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" id="inputName" placeholder="Ім’я">
                            </div>
                            <span class="name-help-block help-block none" style="margin-left:20%;">
                                Введіть тільки власне ім’я, без цифр
                            </span>
                        </div>


                        <div class="form-group phone-group ">
                            <label class="col-sm-2 control-label" style="text-align: center">Телефон</label>
                            <div class="col-sm-10">
                                <input  class="form-control" type="text" id="inputPhone" placeholder="+380994010999">
                            </div>
                            <span class="phone-help-block help-block none" style="margin-left:20%;">
                                Введіть номер телефону у форматі +380 або почніть з 0
                            </span>
                        </div>

                        <div class="form-group address-group">
                            <label class="col-sm-2 control-label" style="text-align: center">Адреса</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" id="inputAdress" placeholder="Київ, вул. Спаська, 2">
                            </div>
                            <span class="address-help-block help-block none" style="margin-left:20%;">
                                Введіть адресу доставки піци
                            </span>
                        </div>

                    </form>
                </div>

                <div class="col-md-5 order-summary">
                    <div class="order_info">
                        <h4>Інформація про замовлення</h4>
                        <p class="order_time">
                            <b>Приблизний час доставки:</b> <span class="timeInfo">невідомий</span>
                        </p>
                        <p class="order_adress">
                            <b>Адреса доставки:</b> <span class="addressInfo">невідома</span>
                        </p>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="next_step">
                    <button  type="button" class="btn btn-warning next_step_button">
                        Далі
                        <i class="glyphicon glyphicon-chevron-right icon-white">
                        </i>
                    </button>
                </div>
            </div>
        </div>

        <div id="googleMap" style="height:330px; width:100%; margin-top:30px;">
        </div>
        <div id="liqpay"></div>


    </div>

</div>

<div id="cart">
    <div class="header_cart">
        <span class="count">Замовлення <span class="badge badge_order">0</span></span>
    </div>
    <div class="final_orders"></div>
    <div class="footer_cart">
        <span class="sum_text">Сума замовлення</span><span class="sum"></span><br>
        <a type="button" class="btn btn-default toEdit" style="background-image: linear-gradient(to bottom,#fff 0,#e0e0e0 100%);"  onClick='location.href="/"'>Редагувати замовлення</a>
    </div>
</div>





